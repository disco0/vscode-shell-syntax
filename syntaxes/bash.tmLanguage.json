{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "bash",
    "scopeName": "source.bash",
    "patterns": [
        {
            "include": "#comment"
        },
        {
            "include": "#constant"
        },
        {
            "include": "#entity"
        },
        {
            "include": "#invalid"
        },
        {
            "include": "#keyword"
        },
        {
            "include": "#meta"
        },
        {
            "include": "#operator"
        },
        {
            "include": "#punctuation"
        },
        {
            "include": "#storage"
        },
        {
            "include": "#string"
        },
        {
            "include": "#support"
        },
        {
            "include": "#type"
        },
        {
            "include": "#variable"
        }
    ],
    "repository": {
        "comment": {
            "patterns": [
                {
                    "begin": "#",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.comment.bash"
                        }
                    },
                    "end": "$",
                    "name": "comment.line.number-sign.bash"
                }
            ]
        },
        "constant": {
            "patterns": []
        },
        "entity": {
            "patterns": []
        },
        "invalid": {
            "patterns": []
        },
        "keyword": {
            "patterns": []
        },
        "meta": {
            "patterns": []
        },
        "operator": {
            "patterns": [
                {
                    "match": "~(!/)",
                    "name": "keyword.operator.bash"
                }
            ]
        },
        "punctuation": {
            "patterns": []
        },
        "storage": {
            "patterns": []
        },
        "string": {
            "patterns": [
                {
                    "name": "string.quoted.single.bash",
                    "begin": "'",
                    "end": "'"
                },
                {
                    "name": "string.quoted.double.bash",
                    "begin": "\"",
                    "end": "\""
                }
            ]
        },
        "support": {
            "patterns": []
        },
        "type": {
            "patterns": []
        },
        "variable": {
            "patterns": []
        }
    }
}